<?xml version="1.0" encoding="utf-8"?>
<selector android:exitFadeDuration="200" xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1dp"
                android:color="?colorButtonNormal" />
            <corners android:radius="8dp" />

        </shape>
    </item>
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width="1dp"
                android:color="?colorPrimary" />
            <corners android:radius="8dp" />
            <solid android:color="@color/brandTrans"/>

        </shape>
    </item>

</selector>

