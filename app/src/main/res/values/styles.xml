    <style name="btn_lwm" parent="Widget.Material3.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">58dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">?backgroundColor</item>
        <item name="backgroundTint">?colorPrimaryInverse</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:textSize">16sp</item>
        <item name="iconTint">?backgroundColor</item>
    </style>


    <style name="btn_lwm_enable_disable" parent="btn_lwm">
        <item name="backgroundTint">@color/button_bg</item>
    </style>

    <style name="btn_lwm.txtbtn" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingHorizontal" tools:targetApi="26">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="btn_lwm.outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="iconTint">?android:textColorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="textInputLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">?backgroundColor</item>
        <item name="boxCornerRadiusBottomEnd">50dp</item>
        <item name="boxCornerRadiusBottomStart">50dp</item>
        <item name="boxCornerRadiusTopEnd">50dp</item>
        <item name="boxCornerRadiusTopStart">50dp</item>
        <item name="boxStrokeColor">@color/stroke_color_with_states</item>
        <item name="boxStrokeWidthFocused">1.5dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">?colorPrimary</item>
    </style>

    <style name="editTextInputLayout" parent="textBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLength">80</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>

    </style>

    <style name="backBtn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="contentPadding">5dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:src">@drawable/arrow_small_left</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <style name="llSet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="FontTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">?fontFamily</item>
        <item name="fontFamily">?fontFamily</item>

    </style>

