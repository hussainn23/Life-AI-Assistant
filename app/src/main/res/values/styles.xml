    <style name="textHeading.medium" parent="textHeading">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textHeading.Small" parent="textHeading">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textHeading.NormalStyle" parent="textHeading.Small">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textHeading.NormalStyle.Large" parent="textHeading.Large">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textHeading.NormalStyle.medium" parent="textHeading.NormalStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textHeading.NormalStyle.VeryLarge" parent="textHeading.VeryLarge">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textHeading.NormalStyle.Small" parent="textHeading.NormalStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="btmNavText" parent="textHeading.NormalStyle.Small">
        <item name="android:fontFamily">@font/varela</item>
    </style>

    <style name="textHeading.NormalStyle.VerySmall" parent="textHeading.NormalStyle">
